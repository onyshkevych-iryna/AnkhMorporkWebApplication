@model AnkhMorporkWebApp.Models.PlayerBeggarViewModel
@{
    ViewBag.Title = "Player meets a beggar";
}

<div class="toast show" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">@Model.SloganStart </strong>
        <img src="@Url.Content("~/Content/Images/beggar.png")" style="width: 200px; height: 200px;" />
    </div>
    <div class="toast-body">
        @if (Model.Beggar.Fee == 0)
        {
            @Model.SloganToShareBeer
        }
        else
        {
            @Model.SloganToPay
            @Model.Beggar.Fee
        }
        @Model.SloganEnd
        <div class="card-body">
            @Html.ActionLink("Yes", "Yes", "BeggarsGuild",
                new
                {
                    fee = Model.Beggar.Fee, 
                    beerAmount = Model.Player.BeerAmount,
                    balance = Model.Player.Balance,
                }
                , new {@class = "btn btn-outline-primary"})
            @Html.ActionLink("No", "No", "BeggarsGuild", Model.Player, new {@class = "btn btn-outline-danger"})
            @Html.ActionLink("Visit Pub", "Index", "Pub", Model.Player, new {@class = "btn btn-outline-warning"})
        </div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"> <i class="fas fa-dollar-sign"></i> Balance: @Model.Player.Balance AM$</li>
        <li class="list-group-item"> <i class="fas fa-beer"></i> Number of beer: @Model.Player.BeerAmount</li>
    </ul>
</div>