@using AnkhMorporkWebApp.Models
@model AnkhMorporkWebApp.Models.PlayerAssassinViewModel
@{
    ViewBag.Title = "Player meets an Assassin";
}

<div class="toast show" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">@Model.sloganStart </strong>
        <img src="@Url.Content("~/Content/Images/assassin1.png")" style="width: 200px; height: 200px;" />
    </div>
    <div class="toast-body">
        <div class="card-body">
            @Model.sloganEnd
            <div class="card-body">
                @Html.ActionLink("Yes", "About", "AssassinsGuild", new { amount = Model.player.Balance }, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("No", "No", "AssassinsGuild", Model.player, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Visit Pub", "Index", "Pub", Model.player, new { @class = "btn btn-outline-warning" })
            </div>
        </div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"> Balance: @Model.player.Balance</li>
        <li class="list-group-item"> Amount of beer: @Model.player.BeerAmount</li>
    </ul>
</div>

